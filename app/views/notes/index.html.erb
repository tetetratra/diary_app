<h1>日記一覧</h1>

<p><%= link_to('今日の日記', note_path(@today_note.id))%></p>
<%= form_for(@today_note) do |f| %>
  <%= f.text_area(:text, size: "60x10") %>
  <br>
  <%= f.submit %>
<% end %>

<hr>

<ul>
  <% @notes.each do |n| %>
    <% wd = %w[日 月 火 水 木 金 土][n.date.wday] %>
    <li><%= link_to("#{n.date} (#{wd})", note_path(n))%></li>
    <ul>
      <% n.text.to_s.lines.split(&:blank?).map(&:join).reject(&:blank?).each do |t| %>
        <li><%= t %></li>
      <% end %>
    </ul>
  <% end %>
</ul>
